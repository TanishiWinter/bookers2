<!DOCTYPE html>
<html>
  <body>
    <% if @user.errors.any? %>
      <%= @user.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <main>
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		       <h1>Editing Book</h1>
             <%= form_with model: @user, url:user_path(@user.id), method: :patch do |f| %>
               <div class="form-group">
                 <label for="book_title">Name</label>
                 <%= f.text_field :name %>
               </div>
               <div class="form-group">
                 <label for="book_title">Image</label>
                 <%= f.file_field :profile_image, accept: "image/*" %>
               </div>
               <div class="form-group">
                 <label for="book_opinion">Introduction</label>
                 <%= f.text_area :introduction %>
               </div>
               <div class="form-group">
                 <%= f.submit 'Update book' %>
               </div>
             <% end %>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>