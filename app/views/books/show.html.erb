<!DOCTYPE html>
<html>
  <body>
    <main>
      <div class="Bookers px-5 px-sm-0">
        <div class="row">
           <div class="col-md-3">
            <h2>User info</h2>
            <p><%= image_tag @user.get_profile_image(100,100) %></p>
            <table class="table">
             <tbody><tr></tr>
              <tr>
                <th>name</th>
                <th><span><%= @user.name %></span></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><span><%= @user.introduction %></span></th>
              </tr>
            </tbody></table>
            <div class="row">
              <%=link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block edit_user_path" do %>
                <i class="fas fa-user-cog" aria-hidden="true"></i>
              <% end %>
            </div>
           <h2 class="mt-3">New book</h2>
           <%= form_with model: Book.new do |f| %>
             <div class="form-group">
               <label for="book_title">Title</label>
               <%= f.text_field :title %>
             </div>
             <div class="form-group">
               <label for="book_opinion">Opinion</label>
               <%= f.text_area :body %>
             </div>
             <div class="form-group">
               <%= f.submit 'Create book' %>
             </div>
           <% end %>
         </div>
    <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>title</tr>
            <tr>opinion</tr>
          </thead>
            <tbody>
              <tr>
                <td>
                  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
                  <span><%= @user.name %></span>
                </td>
                <td><span>
                  <%=link_to @book.title,  book_path(book.id) %>
                </span></td>
                <td><span><%= @book.body %></span></td>
                <td><span>
  　              <%= link_to "Edit", edit_book_path(book.id) %>
　             </span></td>
                <td><span>
                　<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                </span></td>
              </tr>
            </tbody>
        </table>
      </div>
      </div>
      </div>
    </main>
  </body>
</html>